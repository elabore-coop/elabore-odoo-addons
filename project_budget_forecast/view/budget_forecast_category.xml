<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="view_budget_forecast_category_form" model="ir.ui.view">
		<field name="name">budget.forecast.category.form</field>
		<field name="model">budget.forecast.category</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="code"/>
						</group>
						<group groups="base.group_no_one">
							<field name="field_id" />
							<field name="view_id" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="view_budget_forecast_category_tree" model="ir.ui.view">
		<field name="name">budget.forecast.category.tree</field>
		<field name="model">budget.forecast.category</field>
		<field name="arch" type="xml">
			<tree>
				<field name="sequence" widget="handle"/>
				<field name="code"/>
				<field name="name"/>
			</tree>
		</field>
	</record>

	
</odoo>